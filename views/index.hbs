<div class="container">
  <div class="row mt-5" style="justify-content: center; align-items:center;">
    <div style="display:inline-block; text-align:center">總金額：</div>
    <h1 class="total">${{totalAmount.amount}}</h1>
  </div>
  <div class="row" style="display: flex; justify-content:flex-end">
    <form action="">
      <button class="btn btn-info mr-3">支出項目</button>
    </form>
    <form action="/records/new">
      <button class="btn btn-primary">新增</button>
    </form>
  </div>
  <div class="list-group mt-3" style="align-items: center;">
    {{#each records}}
    <li class="list-group-item col-8">
      <div class="row">
        <div class="col-12 d-flex" style="justify-content: center;">
          <div class="col-6 list-top" style="display: flex; justify-content:center;">
            <i class="{{this.icon}} fa-3x mr-5"></i>
            <div>
              <h4>{{this.name}}</h4>
              <div>{{this.date}}</div>
            </div>
          </div>

          <div class="col-6" style="display: flex; justify-content:center; align-items:center">
            <h5 class="col-4">{{this.amount}}</h5>
            <form action="/records/{{this._id}}/edit" method="GET">
              <button class="btn btn-sm mr-1 editBtn"
                style="border-radius: 25%; border:1px solid #f5f5f5; color:#aaaaaa"><i class="fas fa-edit"></i></button>
            </form>
            <form action="/records/delete">
              <button class="btn btn-sm mr-1 deleteBtn"
                style="border-radius: 25%; border:1px solid #f5f5f5; color:#aaaaaa" onclick="removing()"><i
                  class="fas fa-trash-alt"></i></button>
            </form>
          </div>

        </div>
      </div>
    </li>
    {{/each}}
  </div>
</div>