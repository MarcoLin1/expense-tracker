<div class="container edit__expense__container">
  <form action="/records/{{records._id}}?_method=PUT" method="POST" class="edit__expense__form">
    <h3 class="edit__expense__title mb-3 mt-3">請修改你的支出</h3>

    <div class="form-group row mb-3">
      <label for="name" class="mr-2 col-form-label">名稱</label>
      <input class="form-control" type="text" name="name" id="name" value="{{records.name}}">
    </div>

    <div class="form-group row mb-3">
      <label for="date" class="mr-2 col-form-label">日期</label>
      <input class="form-control" type="date" name="date" id="date" value="{{records.date}}">
    </div>

    <div class="form-group row mb-3">
      <label for="Category" class="mr-2 col-form-label">類別</label>
      <select class="form-control" name="Category" id="Category">
        <option>{{records.category}}</option>
        <option value="home/fas fa-home">家居物業</option>
        <option value="transportation/fas fa-shuttle-van">交通出行</option>
        <option value="entertainment/fas fa-grin-beam">休閒娛樂</option>
        <option value="food/fas fa-utensils">餐飲食品</option>
        <option value="other/fas fa-pen">其他</option>
      </select>
    </div>

    <div class="form-group row mb-3">
      <label for="amount" class="mr-2 col-form-label">金額</label>
      <input class="form-control" type="number" name="amount" id="amount" value="{{records.amount}}">
    </div>
    <div class="row mb-3" style="display: flex; justify-content:center">
      <button id="submit-btn" class="btn btn-outline-success mr-3" type="submit"><i
          class="fas fa-save fa-lg"></i></button>
      <button id="submit-btn" class="btn btn-outline-danger" type="submit"><i
          class="fas fa-undo-alt fa-lg"></i></button>
    </div>

  </form>
</div>