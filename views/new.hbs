<div class="container mt-5"
  style="width: 30%; display:flex;justify-content:center; background-color:gainsboro; border-radius:10%">
  <form action="/records" method="POST">
    <h3 class="title mb-5 mt-5">請輸入你的支出</h3>

    <div class="form-group row mb-5">
      <label for="name" class="mr-2 col-form-label">名稱</label>
      <input type="text" name="name" id="name">
    </div>

    <div class="form-group row mb-5">
      <label for="date" class="mr-2 col-form-label">日期</label>
      <input type="date" name="date" id="date">
    </div>

    <div class="form-group row mb-5">
      <label for="Category" class="mr-2 col-form-label">類別</label>
      <select name="Category" id="Category">
        <option value="home/fas fa-home">家居物業</option>
        <option value="transportation/fas fa-shuttle-van">交通出行</option>
        <option value="entertainment/fas fa-grin-beam">休閒娛樂</option>
        <option value="food/fas fa-utensils">餐飲食品</option>
        <option value="other/fas fa-pen">其他</option>
      </select>
    </div>

    <div class="form-group row mb-5">
      <label for="amount" class="mr-2 col-form-label">金額</label>
      <input type="number" name="amount" id="amount">
    </div>
    <div class="row mb-5" style="display: flex; justify-content:center">
      <button id="submit-btn" class="btn btn-danger" type="submit">新增支出</button>
    </div>

  </form>
</div>