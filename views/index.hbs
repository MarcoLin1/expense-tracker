<div class="container">
  <div class="row mt-4" style="justify-content: center; align-items:center;">
    <div style="display:inline-block; text-align:center">總金額：</div>
    <h3 class="total">${{totalAmount.total}}</h3>
  </div>
  <div class="row" style="display: flex; justify-content:flex-end">

    <form action="/records/filter" method="get">
      <button class="btn dropdown-toggle mr-3 filterBtn" data-toggle="dropdown" type="button"
        style="border-radius: 10%; border:1px solid #f5f5f5;">
        {{#if filter}} {{filter}} {{else}} <i class="fas fa-filter fa-lg"></i> {{/if}}
      </button>
      <div class="dropdown-menu">
        <button type="submit" class="dropdown-item" name="filter" value="家居物業">家居物業</button>
        <button type="submit" class="dropdown-item" name="filter" value="交通出行">交通出行</button>
        <button type="submit" class="dropdown-item" name="filter" value="休閒娛樂">休閒娛樂</button>
        <button type="submit" class="dropdown-item" name="filter" value="餐飲食品">餐飲食品</button>
        <button type="submit" class="dropdown-item" name="filter" value="其他">其他</button>
      </div>
    </form>

    <form action="/records/new" method="GET">
      <button class="btn addBtn" style="border-radius: 10%; border:1px solid #f5f5f5;"><i
          class="fas fa-plus-square fa-lg"></i></button>
    </form>

  </div>
  <div class="list-group mt-3" style="align-items: center;">
    {{#each records}}
    <li class="list-group-item col-7">
      <div class="row">
        <div class="col-12 d-flex" style="justify-content: center; align-items:center;">
          <div class="col-7 list-top" style="display: flex; justify-content:center; align-items:center">
            <i class="{{this.icon}} fa-3x mr-5" style="color: lightslategrey; width:30px;"></i>
            <div style="text-align: center; display:inline-block">
              <h4 class="" style="text-align:center">{{this.name}}</h4>
              <div style="text-align: center;">{{this.date}}</div>
            </div>
          </div>

          <div class="col-5" style="display: flex; justify-content:center; align-items:center">
            <h5 class="col-6">{{this.amount}}</h5>

            <form action="/records/{{this._id}}/edit" method="GET">
              <button class="btn btn-sm mr-1 editBtn"
                style="border-radius: 25%; border:1px solid #f5f5f5; color:#888888"><i class="fas fa-edit"></i></button>
            </form>
            <form action="/records/{{this._id}}?_method=DELETE" method="POST">
              <button class="btn btn-sm mr-1 deleteBtn"
                style="border-radius: 25%; border:1px solid #f5f5f5; color:#888888" onclick="removing()"><i
                  class="fas fa-trash-alt"></i></button>
            </form>
          </div>

        </div>
      </div>
    </li>
    {{/each}}
  </div>
</div>